<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_20">

        <LinearLayout
            android:id="@+id/topLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#D0FFFFFF"
            android:gravity="top"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <ImageButton
                android:id="@+id/activity_sub2_setting_backArrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/backarrowicontest" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="105dp"
                android:text="환경설정"
                android:textStyle="bold"
                android:textSize="22dp">

            </TextView>
        </LinearLayout>

        <!-- Gravity: middle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topLinearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart = "14dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="테스트 시스템"
                android:textStyle="bold"
                android:textSize="18dp">
            </TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart = "8dp"
                android:layout_marginEnd   = "8dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <android.widget.Button
                    android:id="@+id/setting_listupdate"
                    android:layout_width ="120dp"
                    android:layout_height="60dp"
                    android:layout_marginStart = "14dp"
                    android:layout_marginTop="10dp"
                    android:text="리스트 업데이트"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:background="@drawable/alpha_bg001">
                </android.widget.Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart = "14dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="리스트를 전부 업데이트 합니다"
                    android:textStyle="bold"
                    android:textSize="12dp">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <android.widget.Button
                    android:id="@+id/setting_listblind"
                    android:layout_width ="120dp"
                    android:layout_height="60dp"
                    android:layout_marginStart = "14dp"
                    android:layout_marginTop="10dp"
                    android:text="리스트 블라인드"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:background="@drawable/alpha_bg001">
                </android.widget.Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart = "14dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="리스트를  전부 삭제시킵니다"
                    android:textStyle="bold"
                    android:textSize="12dp">
                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <android.widget.Button
                    android:id="@+id/setting_defaulttest"
                    android:layout_width ="120dp"
                    android:layout_height="60dp"
                    android:layout_marginStart = "14dp"
                    android:layout_marginTop="10dp"
                    android:text="디폴트 테스트"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:background="@drawable/alpha_bg001">
                </android.widget.Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart = "14dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="리스트 테스트용 데이터를 생성합니다"
                    android:textStyle="bold"
                    android:textSize="12dp">
                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <android.widget.Button
                    android:id="@+id/setting_testdata"
                    android:layout_width ="120dp"
                    android:layout_height="60dp"
                    android:layout_marginStart = "14dp"
                    android:layout_marginTop="10dp"
                    android:text="테스트 데이터"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:background="@drawable/alpha_bg001">
                </android.widget.Button>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart = "14dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="업데이트 테스트용 데이터를 생성합니다"
                    android:textStyle="bold"
                    android:textSize="12dp">
                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <android.widget.Button
                    android:id="@+id/setting_dbflush"
                    android:layout_width ="120dp"
                    android:layout_height="60dp"
                    android:layout_marginStart = "14dp"
                    android:layout_marginTop="10dp"
                    android:text="db초기화"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:background="@drawable/alpha_bg001">
                </android.widget.Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart = "14dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="저장된 데이터를 전부 제거합니다"
                    android:textStyle="bold"
                    android:textSize="12dp">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <android.widget.Button
                    android:id="@+id/setting_serverupdate"
                    android:layout_width ="120dp"
                    android:layout_height="60dp"
                    android:layout_marginStart = "14dp"
                    android:layout_marginTop="10dp"
                    android:text="api 업데이트"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:background="@drawable/alpha_bg001">
                </android.widget.Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart = "14dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="서버에서 현 상황을 업데이트 합니다"
                    android:textStyle="bold"
                    android:textSize="12dp">
                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <android.widget.Button
                    android:id="@+id/setting_bulkcreate"
                    android:layout_width ="120dp"
                    android:layout_height="60dp"
                    android:layout_marginStart = "14dp"
                    android:layout_marginTop="10dp"
                    android:text="벌크 데이터 생성"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:background="@drawable/alpha_bg001">
                </android.widget.Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart = "14dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="테스트용 빈 데이터를 생성합니다"
                    android:textStyle="bold"
                    android:textSize="12dp">
                </TextView>

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart = "8dp"
                android:layout_marginEnd   = "8dp"
                android:background="@color/gray" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="현재 백그라운드 업데이트 기능은 \n 위젯을 생성해야 사용 가능합니다 \n 차후 workmanager를통해 구현 \n 예정입니다"
                android:textSize="12dp"
                android:textStyle="bold">
            </TextView>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
