<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/remove_slide_list"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:background="@android:color/holo_red_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="삭제"
        android:textSize="22sp"
        android:gravity="center" />
    <LinearLayout
        android:id="@+id/swipe_viewlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:background="@drawable/alpha_bg001"
        >
        <ImageView
            android:id="@+id/status_image1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher" />
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/status_listnum1"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="postcompanyName"
                android:textSize="14dp"
                android:textColor="@color/gray"
                android:layout_marginStart="5dp"
                 />
            <TextView
                android:id="@+id/status_listnum2"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="123456789101"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                 />
        </LinearLayout>

        <TextView
            android:id="@+id/status_listnum_total"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="배송완료"
            android:textSize="30dp"
            android:textColor="@color/gray"
            android:layout_marginStart="5dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>